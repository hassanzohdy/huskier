{
    "name": "@mongez/huskier",
    "version": "1.0.0",
    "description": "A wrapper for husky to make it easier to use with a nice summary.",
    "main": "src/index.ts",
    "author": "hassanzohdy",
    "bin": {
        "huskier": "./src/cjs/index.js"
    },
    "dependencies": {
        "@mongez/fs": "^3.0.1",
        "chalk": "^4.1.2",
        "husky": ">=8.0.3"
    },
    "scripts": {
        "fix:test": "eslint --fix -c ./.eslintrc.json ./tests",
        "format:test": "prettier --write ./tests/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc.json",
        "test": "jest ./tests",
        "test:coverage": "jest ./tests --coverage",
        "test:watch": "jest ./tests --watch",
        "test:file": "jest",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/node": "^18.16.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hassanzohdy/huskier"
    }
}
